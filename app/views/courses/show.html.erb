<br />

<div class="col-10 offset-1">
  <div class="booyah-box">

    <h1 class="text-center"><%= @course.title %></h1>
    
    <br/>

    <div class="row">
      <% if @course.image.file %>

      <div class="col-sm-4 col-12">
        <%= image_tag @course.image.to_s, class: 'img-thumbnail img-h-100' %>
      </div>

      <div class="col-sm-8 col-12">
      <% else %>

      <div class="col-12">
      <% end %>
        <% if current_user && current_user == @course.user %>
          <%= link_to 'Manage', instructor_course_path(@course), class: 'btn btn-light btn-large float-right' %>
        <% end %>
        <span class="badge badge-warning">
          <%= number_to_currency(@course.cost) %>
        </span>
        <br />
        <br />
        <%= @course.description %>
      </div>
    </div>

    <br/>

    <div class="row">
      <div class="col-sm-4 col-12 text-center mb-2">
        

        
      </div>

    </div>

    <div class="col-12">
      <% @course.sections.each do |section| %>
        <div class="section">
          <%= section.title %>
          <% section.lessons.each do |lesson| %>
            <div class="lesson">
              <%= link_to lesson_path(lesson) do %>
                <b><%= lesson.title %></b> - <%= lesson.subtitle %>
              <% end %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>