<br />

<div class="col-10 offset-1">
  <div class="booyah-box">
    <h1>What I'm Learning</h1>
    <% current_user.enrolled_courses.each do |course| %>
      <h3 class="text-center">
        <%= link_to course.title, course_path(course) %>
      </h3>
      <br/>
      <div class="text-center">
        <%= image_tag course.image.to_s, class: 'img-fluid' %>
      </div>
      <br/>
      <div class="row">
        <div class="col-12 col-sm-8">
          <%= course.description %>
        </div>
        <div class="col-12 col-sm-4 text-center">
          <%= link_to 'More Info...', course_path(course), class: 'btn btn-lg btn-warning' %>
        </div>
      </div>
      <hr class="col-8 offset-2"/>
      <br class="clr"/>
    <% end %>

    <% if current_user.courses.count > 0 %>
      <h1>What I'm Teaching</h1>
      <% current_user.courses.each do |course| %>
        <h3 class="text-center">
          <%= link_to course.title, course_path(course) %>
        </h3>
        <br/>
        <div class="text-center">
          <%= image_tag course.image.to_s, class: 'img-fluid' %>
        </div>
        <br/>
        <div class="row">
          <div class="col-12 col-sm-8">
            <%= course.description %>
          </div>
          <div class="col-12 col-sm-4 text-center">
            <%= link_to 'More Info...', course_path(course), class: 'btn btn-lg btn-warning' %>
          </div>
        </div>
        <hr class="col-8 offset-2"/>
        <br class="clr"/>
      <% end %>
    <% end %>
  </div>
</div>  