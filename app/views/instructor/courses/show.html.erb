<div class="col-10 offset-1">

  <div class="booyah-box">
    <h1 class="text-center"><%= @course.title %></h1>

    <br/>

    <div class="text-center">
      <%= link_to 'Preview as student...', course_path(@course) %>
    </div>

    <br class="clr"/>

    <div class="text-center">
      <%= link_to 'Add a new section...', new_instructor_course_section_path(@course) %>
    </div>

    <div class="container">
      <ul>
        <% @course.sections.each do |section| %>
          <li><%= section.title %></li>
        <% end %>
      </ul>
    </div>
  </div>

</div>